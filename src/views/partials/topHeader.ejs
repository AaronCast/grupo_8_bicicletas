<header>
    <div class="top-header">
        <div class="bottom-header"> 
            <a href="/">
                <section class="logo">
                    <img src="/img/logo.svg" alt="logo-rodadamx">
                </section>
            </a>
            <div class="navbar">
                <form action="/search" method="GET">
                    <input type="text" name="keywords" placeholder="  Buscar "></i>
                    <button></button>
                </form>
            </div>
            <div class="profile-section">
                <% if(locals.isLogged) { %>
                    <% if(locals.userLogged.image) { %>
                    <div class="userImageProfile">
                        <img src="/img/usuarios/<%= locals.userLogged.image %>" alt="profile-image">
                        <i class="fas fa-sort-down"></i>
                    </div>
                <% }else{ %>
                    <div class="userImageProfile">
                        <i class="fas fa-user-circle logoProfile"></i>
                    </div>
                <% } %>
                      
                    <ul class="userSection">
                        <li><a href="/user/profile">Mi perfil</a></li>
                        <li><a href="/productCar">Mi carrito</a></li>
                        <li><a href="/logout">Cerrar sesión</a></li>
                    </ul>
                <% } else { %>
                    <i class="fas fa-user-circle logoProfile"></i>
                    <ul class="loginSection">
                        <li><a href="/login">Iniciar sesión</a></li>
                        <li><a href="/register">Registrarse</a></li>
                    </ul>
                <% } %>
                
            </div>
        </div>
        <nav class="login">
            <ul class="login-1">
                <% if(locals.isLogged){ %>
                   <center>
                       <p> Bienvenido <%= locals.userLogged.firstName %></p>
                    </center>
                    <% } else { %>
                <li ><a href = "/product/create" title="create-product"><i class="fas fa-plus"></i></a>|</li>
                <li ><a href = "/productCar" title="Carrito" ><i class="fas fa-shopping-cart"></i></a>|</li>
                <% } %>
            </ul>
            <ul class="login-2">
                <% if(locals.isLogged){ %>
                    <p>Barra del Usuario</p>
                    <% } else { %>
                <li ><a href = "/product/create" title="create" ><i class="fas fa-plus"></i></a>|</li>
                <li><a href = "/productCar">Mi carrito<i class="fas fa-shopping-cart"></i></a></li>
                <li><a href = "/register">Registro<i class="fas fa-sign-in-alt"></i></a></li>
                <li><a href = "/login">Iniciar sesión<i class="fas fa-portrait"></i></a></li>
                <% } %>
            </ul>
        </nav>
    </div>
    <div class="products">
        
        <nav class="product-list submenu">
            <section class="arrow-list">
                <!-- <i class="fas fa-caret-square-right more"></i> -->
